{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES6",

        "lib": [
            "DOM",
            "ES2017",
            "ES2018",
            "ES2019",
            "ES2020"
        ],

		"esModuleInterop": true,
		"resolveJsonModule": true,
		"noImplicitAny": true,
		"rootDir": "./src",
		"outDir": "./dist"

	},

	"include": [
		"src/**/*.ts"
	],

	"exclude": [
		"node_modules"
	]

}
